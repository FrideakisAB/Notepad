<UserControl x:Class="DZNotepad.EditableFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DZNotepad"
             mc:Ignorable="d">
    <Grid>
        <TextBox Style="{DynamicResource AnyStyleTextBox}" BorderThickness="0" x:Name="TextSource" Text="" TextWrapping="NoWrap" IsEnabled="True" AcceptsTab="True" AcceptsReturn="True" TextChanged="TextSource_TextChanged" SelectionChanged="TextSource_SelectionChanged" UndoLimit="1000"/>
    </Grid>
</UserControl>
