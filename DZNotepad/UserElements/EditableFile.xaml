<UserControl x:Class="DZNotepad.UserElements.EditableFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DZNotepad.UserElements"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="AnyStyle">
            <Setter Property="Control.Background" Value="#FFDDDDDD" />
            <Setter Property="Control.Foreground" Value="Black" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <TextBox Style="{DynamicResource AnyStyleTextBox}" x:Name="textSource" Text="" TextWrapping="NoWrap" IsEnabled="True" AcceptsTab="True" AcceptsReturn="True" TextChanged="textSource_TextChanged" SelectionChanged="textSource_SelectionChanged"/>
    </Grid>
</UserControl>
