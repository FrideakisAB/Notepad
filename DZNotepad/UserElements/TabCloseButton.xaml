<UserControl x:Class="DZNotepad.UserElements.TabCloseButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DZNotepad.UserElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Click="OnClick" Background="{x:Null}" Margin="2, 0, 0, 0" BorderBrush="{x:Null}" Foreground="{x:Null}">
        <Path Data="M1,9 L9,1 M1,1 L9,9" Stroke="Red" StrokeThickness="2" />
    </Button>
</UserControl>
