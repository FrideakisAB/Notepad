<Window x:Class="DZNotepad.SelectStyle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:DZNotepad.UserElements"
        xmlns:local="clr-namespace:DZNotepad"
        mc:Ignorable="d"
        Title="Стиль" Height="450" Width="800" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary/Theme.xaml"/>
                <ResourceDictionary Source="Dictionary/AnyStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Style="{DynamicResource AnyStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="289*"/>
            <RowDefinition Height="92*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" Grid.RowSpan="2" x:Name="StyleList" Margin="-1,0,1,0"/>
        <Grid Grid.Column="1" Grid.Row="0"/>
        <Grid Grid.Column="1" Margin="0,289,0,0" Grid.RowSpan="4"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="3">
            <Button Style="{DynamicResource AnyStyleButton}" Content="Переименовать" Height="20" Width="110" BorderThickness="1" x:Name="renameStyle" Cursor="Hand" Click="renameStyle_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="2">
            <Button Style="{DynamicResource AnyStyleButton}" Content="Удалить"  Height="20" Width="60" BorderThickness="0" x:Name="DropItem" Margin="0,0,5,0" Click="DropItem_Click"/>
            <Button Style="{DynamicResource AnyStyleButton}" Content="Добавить" x:Name="AddItem" Height="20" Width="60" BorderThickness="1" Margin="0,0,5,0" Click="AddItem_Click"/>
        </StackPanel>
        <Grid Grid.Row="0" Grid.Column="1" Style="{DynamicResource AnyStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="309*"/>
                <ColumnDefinition Width="307*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="43*"/>
                <RowDefinition Height="41*"/>
                <RowDefinition Height="153*"/>
            </Grid.RowDefinitions>
            <ComboBox Style="{DynamicResource AnyStyleComboBox}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100"  />
            <Button Style="{DynamicResource AnyStyleButton}" Grid.Row="1" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Style="{DynamicResource AnyStyle}" Grid.Row="2" Grid.Column="0" Text="TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
        </Grid>
    </Grid>
</Window>
