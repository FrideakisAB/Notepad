<Window x:Class="DZNotepad.SelectStyle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:DZNotepad.UserElements"
        xmlns:local="clr-namespace:DZNotepad"
        xmlns:cc="clr-namespace:DZNotepad"
        mc:Ignorable="d"
        Title="Стиль" Height="450" Width="800" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary/Theme.xaml"/>
                <ResourceDictionary Source="Dictionary/AnyStyle.xaml"/>
                <ResourceDictionary Source="ColorPicker/ColorPicker.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Style="{DynamicResource AnyStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="206*"/>
            <RowDefinition Height="175*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" Grid.RowSpan="2" x:Name="StyleList"/>
        <Grid Grid.Column="1" Grid.Row="0"/>
        <Grid Grid.Column="1" Margin="0,206,0,0" Grid.RowSpan="4"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="3" Height="20" Width="110">
            <Button Style="{DynamicResource AnyStyleButton}" Content="Переименовать" Height="20" Width="110" BorderThickness="1" x:Name="renameStyle" Cursor="Hand" Click="renameStyle_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="2" Height="20" Width="130">
            <Button Style="{DynamicResource AnyStyleButton}" Content="Удалить"  Height="20" Width="60" BorderThickness="0" x:Name="DropItem" Margin="0,0,5,0" Click="DropItem_Click"/>
            <Button Style="{DynamicResource AnyStyleButton}" Content="Добавить" x:Name="AddItem" Height="20" Width="60" BorderThickness="1" Margin="0,0,5,0" Click="AddItem_Click"/>
        </StackPanel>
        <Grid Grid.Row="0" Grid.Column="1" Style="{DynamicResource AnyStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="308*"/>
                <ColumnDefinition Width="308*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="39*"/>
                <RowDefinition Height="52*"/>
            </Grid.RowDefinitions>
            <ComboBox Style="{DynamicResource AnyStyleComboBox}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="21" Grid.Row="1">
                <ComboBoxItem Content="Элемент 1"/>
                <ComboBoxItem Content="Элемент 2"/>
                <ComboBoxItem Content="Элемент 3"/>
            </ComboBox>
            <Button Style="{DynamicResource AnyStyleButton}" Grid.Row="2" Content="Кнопка" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="44"/>
            <TextBlock Style="{DynamicResource AnyStyle}" Grid.Row="3" Text="Текст" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Height="15" Width="49"/>
            <TextBox Style="{DynamicResource AnyStyleTextBox}" Grid.Row="1" Grid.Column="1" Text="Введите тест" Grid.RowSpan="4" Margin="0,5,5,5" TextWrapping="Wrap"/>
            <TextBlock Style="{DynamicResource AnyStyle}" Text="Предпросмотр" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center" Grid.ColumnSpan="2" Height="16" Margin="266,0,0,0" Width="83" />
            <Border BorderThickness="0.5" BorderBrush="Black" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="0" Grid.RowSpan="5"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="101*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="187*"/>
                <ColumnDefinition Width="428*"/>
            </Grid.ColumnDefinitions>
            <ComboBox Style="{DynamicResource AnyStyleComboBox}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="21" Margin="0,23,0,0" Grid.Row="1">
                <ComboBoxItem Content="Кнопка"/>
                <ComboBoxItem Content="Список"/>
                <ComboBoxItem Content="Поле ввода"/>
                <ComboBoxItem Content="Текст"/>
                <ComboBoxItem Content="Общий"/>
                <ComboBoxItem Content="Вкладка"/>
            </ComboBox>
            <TextBlock Style="{DynamicResource AnyStyle}" Text="Редактирование" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Grid.Column="1"  />
            <TextBlock Style="{DynamicResource AnyStyle}" Text="Выбор элемента" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Grid.Column="0"  />
            <Border BorderThickness="0.5" BorderBrush="Black" Grid.RowSpan="2" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Height="22" Margin="0,0,0,153" HorizontalAlignment="Right" Width="38">
                    <cc:ColorPicker x:Name="colorPicherWPF" VerticalAlignment="Top"></cc:ColorPicker>
                </StackPanel>
            </Border>
            <Border BorderThickness="0.5" BorderBrush="Black" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" />
        </Grid>
        <Border BorderThickness="0.5" BorderBrush="Black" Grid.Row="2" Grid.RowSpan="3"/>
    </Grid>
</Window>
