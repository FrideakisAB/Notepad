<Window x:Class="DZNotepad.RenameStyle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DZNotepad"
        mc:Ignorable="d"
        Title="" Height="160" Width="230" ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary/Theme.xaml"/>
                <ResourceDictionary Source="Dictionary/AnyStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Style="{DynamicResource AnyStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="77*"/>
        </Grid.RowDefinitions>
        <Label Style="{DynamicResource AnyStyle}" Content="Введите новое название" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="146"/>
        <TextBox Style="{DynamicResource AnyStyle}" x:Name="NnameStyle" HorizontalAlignment="Center" Grid.Row="1" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="150" Height="18"/>
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{DynamicResource AnyStyle}" Height="50" Width="62">
            <Button Style="{DynamicResource AnyStyleButton}" x:Name="applyRename" Padding="2" Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10"  Cursor="Hand" Click="applyRename_Click"/>
            <Button Style="{DynamicResource AnyStyleButton}" x:Name="CancelRename" Padding="2" Content="Отменить" RenderTransformOrigin="0.677,-1.965" Click="CancelRename_Click" Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
